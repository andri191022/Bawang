@model IEnumerable<SMK.BAWANG.Dto.custom.tbl_tata_tertib_cstm>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-title">
    <h2> Data Tata Tertib</h2>
</div>
<div class="panel panel-primary">
    <div class="panel-heading">
        <p>
            @Html.ActionLink("Add New", "Create", new { area = "" }, new { @class = "btn btn-primary" })
        </p>
    </div>
    <div class="panel-body">
        <div class="example-box-wrapper">
            <table id="datatable-row-highlight" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>                       
                        <th>
                            Tata Tertib
                        </th>
                        <th>
                            Poin
                        </th>
                        <th>
                            Aspek
                        </th>
                        <th style="min-width:123px; max-width:150px;"></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>                       
                        <td>
                            @Html.DisplayFor(modelItem => item.tata_tertib)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.poin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.aspek)
                        </td>
                        <td style="text-align:center;">
                            @Html.ActionLink(" ", "Edit", new { id = item.id_tata_tertib }, new { @class = "glyph-icon tooltip-button demo-icon icon-edit", title = "Edit Data" })
                            @Html.ActionLink(" ", "Details", new { id = item.id_tata_tertib }, new { @class = "glyph-icon tooltip-button demo-icon icon-search", title = "Detail Data" })
                            <a href="#">
                                <span onclick="deleteConfirm('@item.id_tata_tertib','@item.tata_tertib', '@item.poin');">
                                    <i class="glyph-icon demo-icon tooltip-button icon-linecons-trash" title="Delete Data" data-toggle="modal" data-target="#modal-primary"></i>
                                </span>
                            </a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

<script>
    /* Datatable row highlight */

    $(document).ready(function () {
        var table = $('#datatable-row-highlight').DataTable(
            {
                columnDefs: [{
                    targets: 0,
                    render: $.fn.dataTable.render.ellipsis(100)
                }]
                , responsive: true
            }
        );

        $('#datatable-row-highlight tbody').on('click', 'tr', function () {
            $(this).toggleClass('tr-selected');
        });

        fGuruBK('mnTataTertib');

    });



    function deleteConfirm(a, b, c) {
        $("#addMsg1").text("Tata Tertib : " + b);
        $("#addMsg2").text("Poin : " + c);
        $("#noID").text(a);
    }

    function deleteOK() {
        var id = $("#noID").text();
        var ss = 'TataTertib/Delete/' + id;
        window.location.href = ss;
    }

</script>

