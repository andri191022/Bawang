@model IEnumerable<SMK.BAWANG.Dto.custom.tbl_tata_tertib_cstm>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="page-title">
    <h2> Data Tata Tertib</h2>
</div>
<div class="panel panel-primary">
    <div class="panel-heading">
        &nbsp;
    </div>
    <div class="panel-body">
        <div class="example-box-wrapper">
            <table id="datatable-row-highlight" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Tata Tertib
                        </th>
                        <th>
                            Poin
                        </th>
                        <th>
                            Aspek
                        </th>
                    </tr>
                </thead>              
                @foreach (var item in Model)
                {
                    <tr>
                        <td></td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tata_tertib)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.poin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.aspek)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

<script>
    /* Datatable row highlight */

    $(document).ready(function () {
        var table = $('#datatable-row-highlight').DataTable(
            {
                columnDefs: [{
                    targets: 3,
                    render: $.fn.dataTable.render.ellipsis(100)
                }, {
                    targets: 0,
                    orderable: false,
                    searchable: false
                    }
                ]
                , order: [[1, 'asc']]
                , responsive: true
            }
        );

        table.on('order.dt search.dt', function () {
            table.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();

        $('#datatable-row-highlight tbody').on('click', 'tr', function () {
            $(this).toggleClass('tr-selected');
        });

        fDataSiswa('mnTataTertibSWA');

    });

</script>

