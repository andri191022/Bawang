@model SMK.BAWANG.UI.Models.m_tbl_data_siswa

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-title">
    <h2> Data Siswa</h2>
</div>

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="card-title">Detail Data</h3>
    </div>
    <div class="panel-body">

        <div class="row">
            <div class="col-md-2" style="font-weight: bold;">
                @Html.LabelFor(model => model.username)
                <hr />
            </div>
            <div class="col-md-1 text-center">
                :
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.username)&nbsp;
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-md-2" style="font-weight: bold;">
                @Html.LabelFor(model => model.nama)
                <hr />
            </div>
            <div class="col-md-1 text-center">
                :
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.nama)&nbsp;
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-md-2" style="font-weight: bold;">
                @Html.LabelFor(model => model.password)
                <hr />
            </div>
            <div class="col-md-1 text-center">
                :
            </div>
            <div class="col-md-9">
                ***************
                @*@Html.DisplayFor(model => model.password)&nbsp;*@
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-md-2" style="font-weight: bold;">
                @Html.LabelFor(model => model.NIS)
                <hr />
            </div>
            <div class="col-md-1 text-center">
                :
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.NIS)&nbsp;
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-md-2" style="font-weight: bold;">
                @Html.LabelFor(model => model.kelas)
                <hr />
            </div>
            <div class="col-md-1 text-center">
                :
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.kelas)&nbsp;
                <hr />
            </div>
        </div>

    </div>

    <div class="panel-footer">
        @Html.ActionLink("BACK", "Index", "DataSiswaWKL", new { area = "" }, new { @class = "btn btn-primary" })
        <div class=" float-right">
            <b>Creator:</b> @Html.DisplayFor(model => model.creator) &nbsp;-&nbsp; @if (@Model.created != null)
            {@Model.created.Value.ToString("dd/MMM/yyyy HH:mm")},&nbsp;<b>Editor:</b> @Html.DisplayFor(model => model.editor)&nbsp;-&nbsp; @if (@Model.edited != null)
            {@Model.edited.Value.ToString("dd/MMM/yyyy HH:mm")}
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        fWaliKelas('mnDataSiswaWKL');
    });
</script>