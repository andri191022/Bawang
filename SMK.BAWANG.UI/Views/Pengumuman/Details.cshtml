@model SMK.BAWANG.UI.Models.m_tbl_pengumuman

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-title">
    <h2> Data Pengumuman</h2>
</div>

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="card-title">Detail Data</h3>
    </div>
    <div class="panel-body">

        <div class="row">
            <div class="col-md-2" style="font-weight: bold;">
                @Html.LabelFor(model => model.no)
                <hr />
            </div>
            <div class="col-md-1 text-center">
                :
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.no)&nbsp;
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-md-2" style="font-weight: bold;">
                @Html.LabelFor(model => model.tanggal)
                <hr />
            </div>
            <div class="col-md-1 text-center">
                :
            </div>
            <div class="col-md-9">
                @if (@Model.tanggal != null)
                {@Model.tanggal.Value.ToString("dd/MMM/yyyy")} &nbsp;
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-md-2" style="font-weight: bold;">
                @Html.LabelFor(model => model.tanggal_hingga)
                <hr />
            </div>
            <div class="col-md-1 text-center">
                :
            </div>
            <div class="col-md-9">
                @if (@Model.tanggal_hingga != null)
                {@Model.tanggal_hingga.Value.ToString("dd/MMM/yyyy")} &nbsp;
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-md-2" style="font-weight: bold;">
                @Html.LabelFor(model => model.judul)
                <hr />
            </div>
            <div class="col-md-1 text-center">
                :
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.judul)&nbsp;
                <hr />
            </div>
        </div>

        <div class="row">
            <div class="col-md-2" style="font-weight: bold;">
                @Html.LabelFor(model => model.isi)
                <hr />
            </div>
            <div class="col-md-1 text-center">
                :
            </div>
            <div class="col-md-9">
                @Html.DisplayFor(model => model.isi)&nbsp;
                <hr />
            </div>
        </div>

    </div>

    <div class="panel-footer">
        @Html.ActionLink("BACK", "Index", "Pengumuman", new { area = "" }, new { @class = "btn btn-primary" })
        <div class=" float-right">
            <b>Creator:</b> @Html.DisplayFor(model => model.creator) &nbsp;-&nbsp; @if (@Model.created != null)
            {@Model.created.Value.ToString("dd/MMM/yyyy HH:mm")},&nbsp;<b>Editor:</b> @Html.DisplayFor(model => model.editor)&nbsp;-&nbsp; @if (@Model.edited != null)
            {@Model.edited.Value.ToString("dd/MMM/yyyy HH:mm")}
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        fGuruBK('mnPengumuman');
    });
</script>