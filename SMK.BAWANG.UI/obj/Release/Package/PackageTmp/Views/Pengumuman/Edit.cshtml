@model SMK.BAWANG.UI.Models.m_tbl_pengumuman

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-title">
    <h2> Data Pengumuman</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="card-title">Edit Data</h3>
            </div>
            <div class="panel-body">

                <div class="form-group">
                    @Html.LabelFor(model => model.no, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.no, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.no, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.tanggal, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
                    <div class="col-md-10">
                        <div class="input-prepend input-group">
                            <span class="add-on input-group-addon">
                                <i class="glyph-icon icon-calendar"></i>
                            </span>
                            @Html.EditorFor(model => model.tanggal, new { htmlAttributes = new { @class = "bootstrap-datepicker form-control" } })
                        </div>
                        @Html.ValidationMessageFor(model => model.tanggal, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.judul, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.judul, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.judul, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.isi, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.isi, new { @class = "form-control", @rows = "5" })
                        @Html.ValidationMessageFor(model => model.isi, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
            <div class="panel-footer">
                @Html.ActionLink("Back to List", "Index", new { area = "" }, new { @class = "btn btn-success" })
                <input type="submit" value="Save" class="btn btn-primary float-right" />
            </div>
        </div>
    </div>
}

